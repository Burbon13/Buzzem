<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="YourTheme" parent="AppTheme">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AlertDialogCustom">
        <item name="android:textColor">#f7005e</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#2598fc</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="AlertDialogDeleteAccount">
        <item name="android:textColor">#f90000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#1aef25</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="AlertDialogNotificationsSettings">
        <item name="android:textColor">#f90000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    
</resources>
